@model Tools.Models.SettingsViewModel
@{
    ViewData["Title"] = "User settings";
}

<section class="row justify-content-center">
    <div class="col-lg-6">
        <h1 class="mb-4">User settings</h1>

        @if (TempData["StatusMessage"] is string statusMessage)
        {
            <div class="alert alert-success" role="alert">
                @statusMessage
            </div>
        }

        <p class="text-muted">Update your hourly rate and manage optional API keys for OpenAI and Google Gemini.</p>

        <form asp-action="Index" method="post" class="mt-4">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="HourlyRate" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="HourlyRate" class="form-control" type="number" min="0" step="0.01" />
                </div>
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                <div class="form-text">Default hourly rate is @Tools.Models.ApplicationUser.DefaultHourlyRate.ToString("F2").</div>
            </div>

            <div class="mb-3">
                <label asp-for="OpenAIApiKey" class="form-label"></label>
                <input asp-for="OpenAIApiKey" class="form-control" autocomplete="off" />
                <span asp-validation-for="OpenAIApiKey" class="text-danger"></span>
                <div class="form-text">Optional: provide your personal OpenAI API key.</div>
            </div>

            <div class="mb-3">
                <label asp-for="GeminiApiKey" class="form-label"></label>
                <input asp-for="GeminiApiKey" class="form-control" autocomplete="off" />
                <span asp-validation-for="GeminiApiKey" class="text-danger"></span>
                <div class="form-text">Optional: provide your Google Gemini API key.</div>
            </div>

            <button type="submit" class="btn btn-primary">Save settings</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
